{
  "name": "<%= name %>",
  "version": "<%= version %>",
  "description": "<%= description %>",
  "main": "src/<%= name %>/client.js",
  "license": "<%= license %>",
  "author": "<%= author %>",
  "repository": {
    "type": "git",
    "url": "git@github.com:<%= username %>/<%= name %>.git"
  },
  "bugs": {
    "url": "https://github.com/<%= username %>/<%= name %>/issues"
  },
  "scripts": {
    "ava": "NODE_ENV=test ava",
    "build": "rm -rf ./dist/* && NODE_ENV=production webpack",
    "build-dev": "rm -rf ./dist/* && NODE_ENV=development webpack",
    "check-coverage": "nyc check-coverage --branches 100  --functions 100 --lines 100",
    "docs": "jsdoc -c jsdoc-config.json",
    "flow": "flow check",
    "lint": "eslint src/**/*.jsx src/**/*.js",
    "lint-fix": "eslint src/**/*.jsx src/**/*.js --fix",
    "test": "NODE_ENV=test nyc --report-dir=./coverage ava && yarn run check-coverage",
    "test-all": "NODE_ENV=test yarn run lint && yarn run flow && yarn run test",
    "watch": "NODE_ENV=development webpack-dev-server --content-base dist/ --inline --hot"
  },
  "private": <%= private %>,
  "dependencies": {
    "bruce": "^0.6.0",
    "immutable": "^3.8.1",
    "moment": "^2.15.2",
    "numeral": "^1.5.3",
    "react": "^15.3.2",
    <% if(cognito) { %>"react-cognito-forms": "^0.4.1",<% } %>
    "react-dom": "^15.3.2",
    "react-redux": "^4.4.5",
    "react-router": "^3.0.0",
    "redux": "^3.6.0",
    "redux-blueflag": "^0.11.3",
    "redux-thunk": "^2.1.0",
    "stampy": "^0.4.0"
  },
  "devDependencies": {
    "autoprefixer": "^6.5.2",
    "ava": "^0.17.0",
    "babel-core": "^6.18.2",
    "babel-loader": "^6.2.7",
    "babel-plugin-istanbul": "^3.0.0",
    "babel-plugin-react-transform": "^2.0.2",
    "babel-preset-blueflag": "^0.0.1",
    "babel-register": "^6.18.0",
    "css-loader": "^0.25.0",
    "dotenv": "^2.0.0",
    "enzyme": "^2.5.1",
    "eslint": "^3.9.1",
    "eslint-config-blueflag": "^0.2.0",
    "extract-text-webpack-plugin": "^1.0.1",
    "file-loader": "^0.9.0",
    "flow-bin": "^0.35.0",
    "jsdoc": "^3.4.3",
    "jsdoc-babel": "^0.2.1",
    "jsdonk": "^0.2.1",
    "json-loader": "^0.5.4",
    "node-sass": "^3.11.2",
    "nyc": "^10.0.0",
    "postcss": "^5.2.5",
    "postcss-loader": "^1.1.0",
    "proxyquire": "^1.7.10",
    "raw-loader": "^0.5.1",
    "react-addons-test-utils": "^15.3.2",
    "react-router-to-array": "^0.1.2",
    "react-transform-hmr": "^1.0.4",
    "sass-loader": "^4.0.2",
    "static-site-generator-webpack-plugin": "^3.1.0",
    "style-loader": "^0.13.1",
    "webpack": "^1.13.3",
    "webpack-dev-server": "^1.16.2"
  },
  "ava": {
    "require": "babel-register",
    "babel": {
      "presets": [
        "blueflag"
      ],
      "plugins": [
        "istanbul"
      ],
      "sourceMaps": "inline"
    },
    "files": [
      "src/**/*-test.js"
    ]
  },
  "nyc": {
    "all": true,
    "sourceMap": false,
    "instrument": false,
    "include": [
      "src/**"
    ],
    "exclude": [
      "src/**/*-test.js"
    ],
    "reporter": [
      "lcov",
      "text"
    ],
    "extension": [
      ".js",
      ".jsx"
    ],
    "require": [
      "babel-register"
    ]
  }
}
